<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Support Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <!-- Include Sidebar Partial -->
        <%- include('../../views/partials/adminPartials/sidebar') %>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Include Header Partial -->

            <main class="flex-1 max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
                <!-- Emergency Numbers Section -->
                <div class="bg-white shadow-lg rounded-lg mb-6 p-6">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Emergency Numbers Management</h2>
                    <!-- Add New Emergency Number -->
                    <form class="border-b pb-6">
                        <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                            <input type="text" placeholder="Service Name" 
                                class="rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-4">
                            <input type="text" placeholder="Phone Number" 
                                class="rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-4">
                            <button type="submit" 
                                class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition duration-300 ease-in-out">
                                Add Number
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Treatment Management Center Section -->
                <div class="bg-white shadow-lg rounded-lg mb-6 p-6">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Treatment Management Center</h2>
                    <!-- Add New Treatment -->
                    <form class="border-b pb-6">
                        <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                            <input type="text" placeholder="Treatment Name" 
                                class="rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-4">
                            <input type="text" placeholder="Description" 
                                class="rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-4">
                            <button type="submit" 
                                class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700 transition duration-300 ease-in-out">
                                Add Treatment
                            </button>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>
</body>
</html>
