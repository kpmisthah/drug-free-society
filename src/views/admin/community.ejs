<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community Management | Drug Awareness Platform</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/community.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('../../views/partials/adminPartials/sidebar') %>

        <!-- Main Content Area -->
        <main class="main-content">
            <div class="header">
                <h1 class="page-title">Community Management</h1>
                <div class="user-profile">
                    <span>Welcome Misthah</span>
                    <div class="user-avatar">
                        Misthah
                    </div>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="stats-container">
                <div class="stat-card">
                    <div class="stat-header">
                        <div>
                            <div class="stat-value"><%= stats.eventsCount %></div>
                            <div class="stat-label">Active Events</div>
                        </div>
                        <div class="stat-icon events-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>
                    <div><%= stats.upcomingEvents %> upcoming, <%= stats.pastEvents %> completed</div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-header">
                        <div>
                            <div class="stat-value"><%= stats.forumTopics %></div>
                            <div class="stat-label">Forum Topics</div>
                        </div>
                        <div class="stat-icon forums-icon">
                            <i class="fas fa-comments"></i>
                        </div>
                    </div>
                    <div><%= stats.totalPosts %> posts this month</div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-header">
                        <div>
                            <div class="stat-value"><%= stats.volunteers %></div>
                            <div class="stat-label">Active Volunteers</div>
                        </div>
                        <div class="stat-icon volunteers-icon">
                            <i class="fas fa-hands-helping"></i>
                        </div>
                    </div>
                    <div><%= stats.volunteerHours %> hours contributed</div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-header">
                        <div>
                            <div class="stat-value"><%= stats.memberCount %></div>
                            <div class="stat-label">Community Members</div>
                        </div>
                        <div class="stat-icon members-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div><%= stats.newMembers %> new this month</div>
                </div>
            </div>

            <!-- Events Management Section -->
            <section class="content-section">
                <div class="section-header">
                    <h2 class="section-title">Community Events</h2>
                    <button class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Event
                    </button>
                </div>
                
                <table class="content-table">
                    <thead>
                        <tr>
                            <th>Event Name</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Participants</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% events.forEach(event => { %>
                        <tr>
                            <td><%= event.name %></td>
                            <td><%= event.date %></td>
                            <td><%= event.location %></td>
                            <td><%= event.participants %></td>
                            <td>
                                <span class="status-pill status-<%= event.status.toLowerCase() %>">
                                    <%= event.status %>
                                </span>
                            </td>
                            <td class="action-cell">
                                <button class="action-btn edit-btn"><i class="fas fa-edit"></i></button>
                                <button class="action-btn delete-btn"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </section>

            <!-- Forum Management Section -->
            <section class="content-section">
                <div class="section-header">
                    <h2 class="section-title">Discussion Forums</h2>
                    <button class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Forum
                    </button>
                </div>
                
                <table class="content-table">
                    <thead>
                        <tr>
                            <th>Topic</th>
                            <th>Category</th>
                            <th>Posts</th>
                            <th>Last Activity</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% forums.forEach(forum => { %>
                        <tr>
                            <td><%= forum.topic %></td>
                            <td><%= forum.category %></td>
                            <td><%= forum.posts %></td>
                            <td><%= forum.lastActivity %></td>
                            <td>
                                <span class="status-pill status-<%= forum.status.toLowerCase() %>">
                                    <%= forum.status %>
                                </span>
                            </td>
                            <td class="action-cell">
                                <button class="action-btn edit-btn"><i class="fas fa-edit"></i></button>
                                <button class="action-btn delete-btn"><i class="fas fa-trash"></i></button>
                                <button class="action-btn moderate-btn"><i class="fas fa-gavel"></i></button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </section>

            <!-- Volunteer Management Section -->
            <section class="content-section">
                <div class="section-header">
                    <h2 class="section-title">Volunteer Initiatives</h2>
                    <button class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Initiative
                    </button>
                </div>
                
                <table class="content-table">
                    <thead>
                        <tr>
                            <th>Initiative</th>
                            <th>Volunteers</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% initiatives.forEach(initiative => { %>
                        <tr>
                            <td><%= initiative.name %></td>
                            <td><%= initiative.volunteers %></td>
                            <td><%= initiative.startDate %></td>
                            <td><%= initiative.endDate %></td>
                            <td>
                                <span class="status-pill status-<%= initiative.status.toLowerCase() %>">
                                    <%= initiative.status %>
                                </span>
                            </td>
                            <td class="action-cell">
                                <button class="action-btn edit-btn"><i class="fas fa-edit"></i></button>
                                <button class="action-btn delete-btn"><i class="fas fa-trash"></i></button>
                                <button class="action-btn volunteers-btn"><i class="fas fa-user-plus"></i></button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </section>

            <!-- Community Analytics Section -->
            <section class="content-section">
                <div class="section-header">
                    <h2 class="section-title">Community Engagement Analytics</h2>
                    <select class="form-control" style="width: auto;">
                        <option>Last 7 Days</option>
                        <option>Last 30 Days</option>
                        <option>Last 90 Days</option>
                        <option>Custom Range</option>
                    </select>
                </div>
                
                <div class="chart-container">
                    <img src="/api/placeholder/800/300" alt="Community Engagement Chart" style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px;">
                </div>
            </section>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle sidebar responsiveness
            const toggleBtn = document.createElement('button');
            toggleBtn.classList.add('btn', 'sidebar-toggle');
            toggleBtn.innerHTML = '<i class="fas fa-bars"></i>';
            
            const header = document.querySelector('.header');
            if (window.innerWidth < 768) {
                header.prepend(toggleBtn);
                document.querySelector('.sidebar').style.display = 'none';
                
                toggleBtn.addEventListener('click', function() {
                    const sidebar = document.querySelector('.sidebar');
                    sidebar.style.display = sidebar.style.display === 'none' ? 'block' : 'none';
                });
            }
        });
    </script>
</body>
</html>