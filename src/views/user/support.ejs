<%-include('../../views/partials/userPartials/head')%>
<%-include('../../views/partials/userPartials/header')%>
<div class="emergency-banner">
        <h2>Need Immediate Help?</h2>
        <p>Call Emergency Services: 911</p>
    </div>

    <div class="container">
        <section class="section">
            <h2 class="section-title">
                <i class="fas fa-phone-alt"></i>
                24/7 Helplines
            </h2>
            <div class="card-grid">
                <% data.helplines.forEach(function(helpline) { %>
                    <div class="card">
                        <h3><%= helpline.name %></h3>
                        <p class="contact-number"><%= helpline.number %></p>
                        <span class="hours-badge"><%= helpline.hours %></span>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="section">
            <h2 class="section-title">
                <i class="fas fa-hospital-alt"></i>
                Treatment Centers
            </h2>
            <div class="card-grid">
                <% data.treatmentCenters.forEach(function(center) { %>
                    <div class="card">
                        <h3><%= center.name %></h3>
                        <p><i class="fas fa-map-marker-alt"></i> <%= center.address %></p>
                        <p class="contact-number"><%= center.phone %></p>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="section">
            <h2 class="section-title">
                <i class="fas fa-hands-helping"></i>
                Counseling Services
            </h2>
            <div class="card-grid">
                <% data.counselingServices.forEach(function(service) { %>
                    <div class="card">
                        <h3><%= service.name %></h3>
                        <p><%= service.type %></p>
                        <p class="contact-number"><%= service.phone %></p>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="section">
            <h2 class="section-title">
                <i class="fas fa-file-download"></i>
                Downloadable Resources
            </h2>
            <div class="card-grid">
                <% data.resources.forEach(function(resource) { %>
                    <div class="card">
                        <a href="/downloads/<%= resource.filename %>" class="resource-link">
                            <i class="fas fa-file-pdf"></i>
                            <div>
                                <h3><%= resource.name %></h3>
                                <p>Format: <%= resource.type %> | Size: <%= resource.size %></p>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        </section>
    </div>
    <%-include('../../views/partials/userPartials/footer')%>
</body>
</html>